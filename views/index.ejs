  <h1 class="author__header">Hi, I am Marvel Pangondian.</h1>
  <h3 class="author__body">Student from the Bandung Institute of Technology</h2>
</div>

<img src="/img/programming.webp" alt="programming image" class="hero-img">

<article class="articles">
  <h2 class="articles__header">Latest Post</h2>
  <ul class="article-list">
    <% data.forEach(element => {  %>
      <li>
        <a href= <%= `post/${element._id}` %>>
          <p class="article-list__title"><%= element.title %> </p>
          <p class="article-list__date"><%= element.createdAt.toDateString() %></p>
        </a>
      </li>
    <% }) %>  
  </ul>
  
  <% if (!nextPage) { %>
    <div class="all-pagination all-pagination-right">
  <% } else { %>
    <div class="all-pagination">
    <a href=<%= `?page=${nextPage}`%> class="pagination pagination-older">&lt; View older posts</a>
  <% } %>
      <% if (currentPage !== 1) { %>
        <a href= <%= `?page=${currentPage - 1}` %> class="pagination pagination-newer"> View newer posts &gt;</a>
      <% } %>
  </div>
</article>